/* pages/mycard/mycard.wxss */
Page {
  background: #F4F6F7;
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  overflow-y: auto;
}
.qrcode_img {
  height:180px;
  width:180px;
  display: flex;
  justify-content:center;
  align-items:center;
  margin-top:60px;
}
.my_card {
  height:30px;
  width:100%;
  font-size:15px;
  display: flex;
  justify-content:center;
  align-items:center;
  color:#333333;
}
.qrcode {
  height:auto;
  width:100%;
  display:flex;
  flex-direction:column;
  align-items:center;
}
.head_portrait {
  width:50px;
  height:50px;
  border-radius:50%;
  overflow:hidden;
  background:#fff;
}
.company {
  margin-left:10px;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  width:200px;
}
.mark {
  margin-left:10px;
  height:100%;
  width:30px;
}
.img {
  height:18px;
  width:18px;
  border-radius:12px;
  background:#fff;
  overflow:hidden;
}
.title_img {
  height:25%;
  color:#fff;
  display:flex;
  flex-direction:row;
  align-items:center;
}
.person_info {
  height:60%;
  width:100%;
  display:flex;
  flex-direction:column;
  justify-content:center;
  font-size:14px;
}
.person_name {
  height:40%;
  width:100%;
  color:#FFFFFF;
  font-size:30px;
}
.person {
  height:100%;
  display:flex;
  flex-direction: column;
  justify-content:center;
}
.my_info {
  background-size:100% 100%;
  height:140px;
  display:flex;
  flex-direction: row;
  border-radius: 10px;
  padding:25px;
  position: relative;
}