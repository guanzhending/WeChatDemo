/* pages/personinvit/personinvit.wxss */
Page {
  background: #F4F6F7;
  color: #fff;
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  overflow-y: auto;
}
.headportrait {
  width:60px;
  height:60px;
  background:#fff;
  border-radius:30px;
  position:relative;
  display:flex;
  flex-direction:row;
  justify-content:center;
  align-items:center;
  margin-top: 60px;
  overflow:hidden;
}
.schoolmessage {
  display: flex;
  flex-direction:column;
  justify-content:center;
  height: 80px;
  background-color: #ffffff;
}
.schoolinfo {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 20px;
}
.person {
  height: 100px;
  margin-top: 15px;
  padding: 0 20px;
}
.personinfo {
  padding: 15px 15px;
  background-color: #ffffff;
  border-radius:6px;
}
.personinfo2 {
  height: 70px;
  display: flex;
  flex-direction: row;
}
.personinfo3 {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}