<!--pages/joinactivity/joinactivity.wxml-->
<view class='page' style='height:100%;'>
  <view class='page_bd' style="height:100%;width:100%;background-image:url('{{topimg}}');background-repeat:no-repeat;background-size:100% 100%;">
    <view style='width:70%;height:300px;margin:0 auto;padding-top:80px;display:flex;flex-direction: column;'>
      <view>
        <text style='font-size:16px;'>您{{schoolinfo.schoolname}}{{xiaoyouinfo.name}}的校友邀请您参加{{activityinfo.date}}{{activityinfo.address}}的{{activityinfo.title}}</text>
      </view>
      <view style='margin-top:20px;'>
        <text style='font-size:13px;'>{{activityinfo.content}}</text>
      </view>
      <view>
      <view class='headportrait'>
      <image src='{{userimg}}' mode='{{mode}}' style='height:100%;width:100%;'></image></view> 
      </view>
      <view style='text-align:right;font-size:10px;'><text>{{time}}</text></view>
    </view>
    <view style='position:absolute;bottom:0;left:0;width:100%;height:32%;'>
      <view style='position:relative;top:0;margin:0 auto;height:100px;width:100px;'>
          <image src='{{src}}' mode='{{mode}}' style='height:100%;width:100%;z-index:1;'></image>
      </view>
    </view>
    <view style='position:absolute;bottom:10px;left:15px;right:15px;'>
        <button class="weui-btn" type="primary" style='background-color:#2ebd59;' bindtap="join">加入活动</button>
      </view>
  </view>
</view>
