<!--pages/alumnipage/alumnipage.wxml-->
<view class='page' style='background-color:#F4F6F7;height:100%;width:100%;'>
  <view class="page_hd" style="background:url('{{topmsg}}') no-repeat;background-size:100% 100%;height:220px;display:flex;flex-direction: column;align-items:center;">
    <view class='headportrait'>
      <view class='headportrait2'>
        <image src='{{headimg}}' mode='{{mode}}' style='height:100%;width:100%;'></image>
      </view>
    </view>
    <view class='schoolname'>
        <text style='font-size:20px;color:#ffffff;'>{{info.name}}</text>
    </view>
    <view style='display: flex;flex-direction: column;align-items: center;margin-top:5px;'>
        <text style='font-size:15px;color:#ffffff;'>{{info.school_info.schoolname}}</text>
    </view>
  </view>
  <view class='schoolmessage'>
      <view class='schoolinfo'>
        <view style='width:100%;'>
          <text style='word-wrap:break-word; font-size:12px;color:#999999;'>{{info.content}}</text>
        </view>
      </view>
    </view>
  <view class='page_bd'>
    <view class='createinfo'>
      <view class='createname' style='border-bottom: 1px dotted #BBBBBB;'>
        <view class='module1'>
          <view class='name'>
            <image style='height:25px; width:30px;' src='{{creater}}' mode='{{mode}}'></image>
            <text style='color:#666666;font-size:18px;margin-left:10px;'>创建者</text>
          </view>
        </view>
        <view class='module2'>
          <text style='color:#333333;font-size:18px;'>{{info.userinfo.name}}</text>
        </view>
      </view>
      <view class='createname'>
        <view class='module1'>
          <view class='name'>
            <image style='height:25px; width:30px;' src='{{addresslist}}' mode='{{mode}}'></image>
            <text style='color:#666666;font-size:18px;margin-left:10px;'>通讯录</text>
          </view>
        </view>
        <navigator url='{{addresslisturl}}' class='module3'>
          <text style='font-size:18px;'>{{info.number_xiaoyouhui}}人</text>
          <image style='height:30px; width:30px;' src='{{people}}' mode='{{mode}}'></image>
        </navigator>
      </view>
    </view>
    <view class='activity' wx:if="{{hasactivity}}">
      <view class='actitle'>
        <view class='actitle2'>
          <text style='font-size:14px;color:#999999;'>活动</text>
        </view>
      </view>
      <block wx:for="{{info.activitys}}"  wx:for-item="activity">
        <navigator url='../activityinfo/activityinfo?id={{activity.id}}'>
          <view class='acontent'>
            <view class='content'>
              <text style='font-size:10px;'>{{activity.date}}</text>
              <text style='font-size:25px;font-family:"黑体"'>5</text>
              <text style='font-size:13px;'>周五</text>
            </view>
            <view class='content2'>
              <view style='display: flex;flex-direction:column;height:100%;width:100%;'>
                <view class='content2-mes'>
                  <text style='font-size:16px;color:#333333;'>{{activity.title}}</text>
                </view>
                <view class='content2-people' style=''>
                  <text style='font-size:12px;color:#999999;'>已有</text>
                  <text style='font-size:20px;color:#2ebd59;'>{{activity.baoming}}</text>
                  <text style='font-size:12px;color:#999999;'>人加入</text>
                </view>
                <view class='content2-time'>
                  <view class='message'>
                    <text class='time' style='justify-content: flex-start;'>时间　</text>
                    <text class='time'>{{activity.date}}</text>
                  </view>
                  <view class='message'  style='justify-content: flex-start;'>
                    <text class='time'>地点　</text>
                    <text class='time'>{{activity.address}}</text>
                  </view>
                </view>
              </view>
            </view>
            <view style='width:23%;padding:10px;'>
              <view style='height:100%;width:100%;'>
                <image src='{{src}}' mode='{{mode}}' style='height:90px;width:90px;'></image>
              </view>
            </view>
          </view>
        </navigator>
      </block>
    </view>
    <view style='padding:0px 15px;'>
      <button class="weui-btn" type="primary" style='background-color:#2ebd59;' bindtap="lookAddress">查看通讯录</button>
    </view>
    <view style='padding:0px 15px;margin-top:15px;'>
      <button class="weui-btn" type="primary" style='background-color:#2ebd59;' open-type="share">分享校友会</button>
    </view>
    <!-- <block wx:if="{{iscreater}}"> -->
      <!-- <view style='padding:0px 15px;margin-top:15px;'>
        <button class="weui-btn" type="default" bindtap="edit">编辑校友会</button>
      </view> -->
      <view style='padding:0px 15px 15px 15px;margin-top:15px;' wx:if="{{iscreater}}">
        <button class="weui-btn" type="default" bindtap="deleted">删除校友会</button>
      </view>
    <!-- </block> -->
  </view>
</view>
