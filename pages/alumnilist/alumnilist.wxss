/* pages/alumnilist/alumnilist.wxss */
Page {
  background: #F4F6F7;
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  overflow-y: auto;
}
.weui-search-bar {
  background-color: #F4F6F7;
  border-top: 0;
  border-bottom:0;
}
.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result:before{
    display: none;
}
.weui-cell{ 
    padding: 12px 15px 12px 35px;
}
.alumniinfo {
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.alumniimg {
  height: 100px;
  width: 100px;
}
.alumnimsg {
  height: 100%;
  width: 70%;
  margin-left: 10px;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}