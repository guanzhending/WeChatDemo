/* pages/alumnipage/alumnipage.wxss */
Page {
  background: #F4F6F7;
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  overflow-y: auto;
}
.schoolmessage {
  display: flex;
  flex-direction:column;
  justify-content:center;
  height: 70px;
  background-color: #ffffff;
}
.background {
  height: 100%;
  width: 100%;
  background-image: url('../../image/1.png');
}
.headimg {
  height:420px;
  width: 100%;
}
.schoolname {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top:10px;
}
.schoolinfo {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 30px;
}
.createinfo {
  width: 100%;
  background-color: #ffffff;
  margin-top: 15px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.createname {
  display: flex;
  flex-direction: row;
  height: 50px;
}
.module1 {
  width: 85%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 20px;
}
.module2 {
  width: 50%;
  padding-right: 30px;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  font-size:14px;
}
.module3 {
  width: 15%;
  padding-right: 20px;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  font-size:14px;
}
.name {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.activity {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
}
.actitle {
  height: 30px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 20px;
  background-color: #F4F6F7;
}
.actitle2 {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.acontent {
  height: 110px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-bottom: 15px; 
  background-color: #ffffff; 
}
.content {
  height: 100%;
  width: 20%;
  border-right: 1px solid #e4e4e4;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.content2-mes {
  height:36px;
  width:100%;
  display: flex;
  flex-direction:column;
  justify-content: center;
}
.content2-people {
  height:30px;
  width:100%;
  display: flex;
  flex-direction:row;
  justify-content: flex-start;
  align-items: center;
}
.content2-time {
  height:35px;
  width:100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}
.content2 {
  width:80%;
  display: block;
}
.time {
  font-size: 12px;
  color: #666666;
  display: flex;
  flex-direction: row;
  min-width: 38px;
}
 .jxlogo{
  width: 120px;
  height: 120px;
}
.headportrait {
  width:84px;
  height:84px;
  background:#fff;
  border-radius:42px;
  position:relative;
  display:flex;
  flex-direction:row;
  justify-content:center;
  align-items:center;
  margin-top: 45px;
}
.headportrait2{
  width:70px;
  height:70px;
  background:#fff;
  border-radius:35px;
  overflow:hidden;
  display:flex;
  flex-direction:row;
  justify-content:center;
  align-items:center;
}
.message {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-start;
}
.weui-cells::before{
  border-top: 0;
}
.weui-cells::after{
  border-bottom: 0;
}

