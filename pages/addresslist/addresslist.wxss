/* pages/addresslist/addresslist.wxss */
Page {
  background: #F4F6F7;
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  overflow-y: auto;
}
.weui-search-bar {
  background-color: #F4F6F7;
  border-top: 0;
  border-bottom:0;
}
.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result:before{
    display: none;
}
.weui-cell{
    padding: 12px 15px 12px 35px;
}
.page__bd{
    padding-bottom: 0;
}
.widebound {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-bottom: 1px solid #e5e5e5;
  margin-bottom: 10px;
  background-color: #FFFFFF;
}
.navigator-hover {
  color: #C6C4C4;
}
.title {
  font-size:13px;
  color:#a9a9a9;
  height:100%;
  border-bottom: 1px solid #eeeeee;
  display:flex;
  flex-direction: column;
  justify-content: center;
}
.peopleimg {
  height:58px;
  width:58px;
  position:relative;
  left:0px;
  top:0;
}
.peopleimg2 {
  height:58px;
  width:58px;
}
.right_img {
  width:30px;
  height:100%;
  position:absolute;
  right:0px;
  top:15px;
}
.right_img2 {
  height:30px;
  width:30px;
}
.info_work {
  height:50%;
  width:100%;
  font-size:14px;
  color:#AAAAAA;
}
.info_me {
  font-size:10px;
  color:#fff;
  width:20px;
  background-color: #2EBD59;
  border-radius:10px;
  text-align:center;
}
.info_group {
  font-size:10px;
  color:#fff;
  width:30px;
  background-color: #2EBD59;
  border-radius:10px;
  text-align:center;
}
.info_boolean {
  font-size:15px;
  padding-left:20px;
  padding-top:5px;
  width:auto;
  height:auto;
}
.info_name {
  height:50%;
  width:100%;
  display:flex;
  flex-direction: row;
  justify-content:flex-start;
}
.info {
  height:100%;
  width:auto;
  position:absolute;
  left:80px;
  top:0;
}