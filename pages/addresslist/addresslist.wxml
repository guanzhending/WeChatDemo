                      <view class='peopleimg'>
                        <image src='../../image/people.png' class='peopleimg2'>
                        </image>
                      </view>
                      <view class='info'>
                        <view class='info_name'>
                          <view style='font-size:15px;'>张三</view>
                          <view style='' class='info_boolean'>
                            <block wx:if="{{true}}">
                              <view class='info_group'>群主</view>
                            </block>
                            <block wx:elif="{{false}}">
                              <view class='info_me'>我</view>
                            </block>
                          </view>
                        </view>
                        <view class='info_work'>中信银行 营销经理</view>
                      </view>
                      <view class='right_img'>
                        <image src='../../image/right.png' class='right_img2'></image>
                      </view>
                    </view>
                  </view>
                </navigator>  
              </block>
