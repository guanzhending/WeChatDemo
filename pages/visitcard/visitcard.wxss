Page {
  background: #F4F6F7;
  color: #fff;
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  overflow-y: auto;
}
.headportrait {
  width:60px;
  height:60px;
  background:#fff;
  border-radius:30px;
  position:relative;
  display:flex;
  flex-direction:row;
  justify-content:center;
  align-items:center;
  margin-top: 60px;
  overflow:hidden;
}
.name {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top:15px;
}
.message {
  color: #333333;
  font-size: 18 px;
}
.info {
  color: #999999;
  font-size: 12px;
}
.list {
  display:flex;
