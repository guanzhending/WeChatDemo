/* pages/activitylist/activitylist.wxss */
Page {
  background: #F4F6F7;
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  overflow-y: auto;
}
.acontent {
  height: 110px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  background-color: #ffffff; 
}
.content {
  height: 100%;
  width: 20%;
  border-right: 1px solid #e4e4e4;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.content2 {
  width:80%;
  display: block;
}
.content2-mes {
  height:36px;
  width:100%;
  display: flex;
  flex-direction:column;
  justify-content: center;
}
.content2-people {
  height:30px;
  width:100%;
  display: flex;
  flex-direction:row;
  justify-content: flex-start;
  align-items: center;
}
.content2-time {
  height:35px;
  width:100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}
.message {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-start;
}
.time {
  font-size: 12px;
  color: #666666;
  display: flex;
  flex-direction: row;
  min-width: 38px;
}
.activity {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
}
.actitle {
  height: 30px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 20px;
  background-color: #F4F6F7;
}
.actitle2 {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}